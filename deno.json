{
  "name": "@richvincent/fetch-quote",
  "version": "0.3.0",
  "nodeModulesDir": "auto",
  "imports": {
    "asciichart": "npm:asciichart@1.5.25",
    "@std/yaml": "jsr:@std/yaml@^1",
    "@std/assert": "jsr:@std/assert@^1",
    "@std/flags": "jsr:@std/flags@^1",
    "@std/fmt": "jsr:@std/fmt@^1",
    "@std/fs": "jsr:@std/fs@^1",
    "@std/path": "jsr:@std/path@^1"
  },
  "tasks": {
    "start": "deno run --allow-net --allow-env --allow-read src/main.ts",
    "dev": "deno run --allow-net --allow-env --allow-read --allow-write --watch src/main.ts",
    "test": "deno test --allow-read --allow-env tests/",
    "test:unit": "deno test --allow-read tests/unit/",
    "test:integration": "deno test --allow-read --allow-net --allow-env tests/integration/",
    "test:coverage": "deno test --allow-read --allow-env --coverage=coverage tests/",
    "check": "deno check src/main.ts fetch_quote.ts",
    "lint": "deno lint src/ tests/",
    "fmt": "deno fmt src/ tests/"
  },
  "compilerOptions": {
    "strict": true
  }
}
